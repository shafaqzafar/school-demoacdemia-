{
  "name": "school-management-frontend",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently -n FRONTEND,BACKEND,ELECTRON -c cyan,magenta,green \"npm run dev:front\" \"npm run dev:back\" \"npm run dev:electron\"",
    "dev:front": "vite --port 5173 --strictPort --host 127.0.0.1",
    "dev:back": "cross-env PORT=59201 npm --prefix backend run dev",
    "dev:electron": "wait-on http://127.0.0.1:5173 http://127.0.0.1:59201/health && cross-env VITE_DEV_SERVER_URL=http://127.0.0.1:5173 NODE_ENV=development electron ./electron/main.js",
    "build": "vite build",
    "build:front": "vite build",
    "build:backend": "npm --prefix backend run build",
    "make:ico": "node ./scripts/make-ico.mjs",
    "dist:win": "npm run make:ico && npm run build:front && npm run build:backend && cross-env PUPPETEER_SKIP_DOWNLOAD=1 npm --prefix backend install --omit=dev && cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder -w",
    "preview": "vite preview",
    "postinstall": "npm --prefix backend install"
  },
  "devDependencies": {
    "@babel/plugin-transform-react-jsx": "^7.27.1",
    "@tailwindcss/postcss": "^4.1.16",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^5.1.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.2.4",
    "electron-builder": "^26.0.12",
    "jimp": "^0.22.10",
    "png-to-ico": "^2.1.8",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.16",
    "typescript": "~5.9.3",
    "vite": "^7.1.7",
    "vite-plugin-svgr": "^4.5.0",
    "wait-on": "^9.0.3"
  },
  "dependencies": {
    "@chakra-ui/icons": "^2.1.0",
    "@chakra-ui/react": "^2.8.2",
    "@chakra-ui/styled-system": "^2.0.0",
    "@chakra-ui/theme-tools": "^2.2.6",
    "@zxing/browser": "^0.1.5",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@vitejs/plugin-react-swc": "^4.2.2",
    "apexcharts": "^5.0.0",
    "framer-motion": "^12.26.1",
    "jspdf": "^3.0.3",
    "jspdf-autotable": "^5.0.2",
    "lucide-react": "^0.548.0",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-apexcharts": "^1.4.1",
    "react-custom-scrollbars-2": "^4.5.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.5.0",
    "react-router-dom": "^7.9.4",
    "recharts": "^3.6.0",
    "stylis-plugin-rtl": "^2.1.1",
    "xlsx": "^0.18.5"
  },
  "build": {
    "appId": "org.mindspire.school",
    "productName": "School Management System",
    "artifactName": "School-Management-System-Setup-${version}.${ext}",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**",
      "electron/**",
      "public/**",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "backend",
        "to": "backend",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "backend/node_modules",
        "to": "backend/node_modules",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "public/favicon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "public/favicon.ico",
      "uninstallerIcon": "public/favicon.ico"
    }
  }
}
